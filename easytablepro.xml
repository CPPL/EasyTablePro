<?xml version="1.0" encoding="utf-8"?>
<install type="component" method="upgrade" version="1.5.0">
	<name>EasyTablePro</name>
	<version>1.0.0a1 (e3b7602)</version>
	<author>Craig Phillips</author>
	<creationDate>30-May-2011</creationDate>
	<copyright>Copyright (C) 2011.</copyright>
	<authorEmail>support@seepeoplesoftware.com</authorEmail>
	<authorUrl>http://www.seepeoplesoftware.com</authorUrl>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<description>EasyTable Pro component imports and displays tables from CSV text files.</description>
	<installfile>install/install.easytablepro.php</installfile>
	<uninstallfile>install/uninstall.easytablepro.php</uninstallfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install/install.mysql.sql</file>
		</sql>
	</install>
	<files folder="site">
		<filename>index.html</filename>
		<filename>easytablepro.php</filename>
		<filename>router.php</filename>
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<languages folder="language/site">
		<language tag="en-GB">en-GB.com_easytablepro.ini</language>
		<language tag="en-GB">en-GB.plg_search_easytables.ini</language>
	</languages>
	<administration>
		<menu img="components/com_easytablepro/assets/images/easytablepro_logo.ico" link="option=com_easytablepro">EasyTable Pro</menu>
		<languages folder="language/admin">
			<language tag="en-GB">en-GB.com_easytablepro.ini</language>
		</languages>
		<files folder="admin">
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>helpers</folder>
			<folder>install</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<filename>easytable.css</filename>
			<filename>easytable.js</filename>
			<filename>easytablepro.php</filename>
		</files>
	</administration>
	<params>
		<param name="show_description" default="1">
		</param>
		<param name="show_search" default="1">
		</param>
		<param name="show_pagination" default="1">
		</param>
		<param name="show_next_prev_record_links" default="1">
		</param>
		<param name="show_created_date" default="0">
		</param>
		<param name="show_modified_date" default="0">
		</param>
		<param name="modification_date_label" default="">
		</param>
		<param name="id" default="" >
		</param>
		<param name="key_field" default="">
		</param>
		<param name="linked_key_field" default="">
		</param>
		<param name="make_table_sortable" default="0">
		</param>
	</params>
</install>
