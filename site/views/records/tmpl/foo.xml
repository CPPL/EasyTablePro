<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_EASYTABLEPRO_RECORDS_FOOTABLES_VIEW_TITLE"  option="COM_EASYTABLEPRO_RECORDS_FOOTABLES_VIEW_OPTION">
		<help
			key = "COM_EASYTABLEPRO_HELP_MENU_TABLEVIEW"
		/>
		<message>
		<![CDATA[COM_EASYTABLEPRO_MENU_SHOWS_A_SPECIFIC_TABLE_USING_FOOTABLES_LAYOUT]]>
		</message>
	</layout>
		<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_easytablepro/models/fields" >

			<field name="id"
				type="easytable"
				default=""
				label="COM_EASYTABLEPRO_LABEL_SELECT_TABLE"
				description="COM_EASYTABLEPRO_LABEL_SELECT_TABLE_DESC"
				required="true"
			/>
		</fieldset>
	</fields>
	<fields name="params">
        <fieldset name="footables"
                  label="COM_EASYTABLEPRO_MENU_FOOTABLES_OPTIONS" >
            <field
                    name="load_footables_theme"
                    type="list" default=""
                    label="COM_EASYTABLEPRO_PREF_LOAD_FOOTABLES_THEME"
                    description="COM_EASYTABLEPRO_PREF_LOAD_FOOTABLES_THEME_DESC"
                    >
                <option value="">JNO</option>
                <option value="metro">COM_EASYTABLEPRO_PREF_LOAD_FOOTABLES_THEME_METRO</option>
                <option value="standalone">COM_EASYTABLEPRO_PREF_LOAD_FOOTABLES_THEME_STANDALONE</option>
            </field>

            <field
                    name="footable_css_override_file"
                    type="text"
                    size="50"
                    label="COM_EASYTABLEPRO_PREF_FOOTABLE_CSS_OVERRIDE_FILE"
                    description="COM_EASYTABLEPRO_PREF_FOOTABLE_CSS_OVERRIDE_FILE_DESC"
                    />

            <field
                    name="load_footables_pagination_pages"
                    type="list" default="0"
                    label="COM_EASYTABLEPRO_PREF_LOAD_FOOTABLES_PAGES"
                    description="COM_EASYTABLEPRO_PREF_LOAD_FOOTABLES_PAGES_DESC"
                    >
                <option value="0">JALL</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </field>

            <field name="field_hidden_options"
                   type = "easytablefieldhiddenoptions"
                   label="COM_EASYTABLEPRO_LABEL_AJAX_VIEWS_FIELD_OPTIONS"
                   description="COM_EASYTABLEPRO_LABEL_AJAX_VIEWS_FIELD_OPTIONS_DESC"
                    />
            <field name="field_hidden_options_values"
                   type="hidden"
                   />
        </fieldset>
		<fieldset name="basic"
				label="COM_EASYTABLEPRO_MENU_TABLE_OPTIONS"
				addfieldpath="/administrator/components/com_easytablepro/models/fields" >
			<field name="sort_field"
				type="easytablefields"
				default=""
				label="COM_EASYTABLEPRO_MENU_TABLE_SELECT_SORT_FIELD_PROMPT"
				description="COM_EASYTABLEPRO_MENU_TABLE_SELECT_SORT_FIELD_DESC" />
			<field name="sort_order"
					type="list"
					default=""
					label="COM_EASYTABLEPRO_MENU_TABLE_SELECT_SORT_ORDER_PROMPT"
					description="COM_EASYTABLEPRO_MENU_TABLE_SELECT_SORT_ORDER_DESC">
						<option value="ASC">COM_EASYTABLEPRO_LABEL_ASCENDING</option>
						<option value="DESC">COM_EASYTABLEPRO_LABEL_DESCENDING</option>
			</field>
			<field name="filter_field"
				type="easytablefields"
				default=""
				label="COM_EASYTABLEPRO_MENU_SELECT_FILTER_FIELD_PROMPT"
				description="COM_EASYTABLEPRO_MENU_SELECT_FILTER_FIELD_DESC" />
			<field name="filter_type"
				type="list"
				default=""
				label="COM_EASYTABLEPRO_MENU_SELECT_FILTER_OPERATOR_PROMPT"
				description="COM_EASYTABLEPRO_MENU_SELECT_FILTER_OPERATOR_DESC">
					<option value="LIKE">COM_EASYTABLEPRO_LABEL_CONTAINS</option>
					<option value="IS">COM_EASYTABLEPRO_LABEL_IS</option>
			</field>
			<field name="filter_value"
				type="text"
				default=""
				label="COM_EASYTABLEPRO_PREF_RECORD_FILTER_VALUE_LABEL"
				description="COM_EASYTABLEPRO_PREF_RECORD_FILTER_VALUE_DESC" />

			<field
				name="spacer2"
				type="spacer"
				hr="true"
			/>
            <field name="advanced_filter"
                   type="list"
                   default=""
                   label="COM_EASYTABLEPRO_MENU_ENABLE_ADVANCED_FILTER_LABEL"
                   description="COM_EASYTABLEPRO_MENU_ENABLE_ADVANCED_FILTER_DESC">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="advanced_filter_value"
                   type="textarea"
                   filter="raw"
                   cols="45"
                   rows="5"
                   default=""
                   label="COM_EASYTABLEPRO_MENU_ADVANCED_FILTER_VALUE_LABEL"
                   description="COM_EASYTABLEPRO_MENU_ADVANCED_FILTER_VALUE_DESC" />
            <field
                    name="spacer3"
                    type="spacer"
                    hr="true"
                    />
            <field
                    name="auto_column_width"
                    type="list" default="1"
                    label="COM_EASYTABLEPRO_PREF_AUTO_COLUMN_WIDTH"
                    description="COM_EASYTABLEPRO_PREF_AUTO_COLUMN_WIDTH_DESC"
                    >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
			<field name="records_layout" type="componentlayout"
				label="JFIELD_ALT_LAYOUT_LABEL"
				description="JFIELD_ALT_COMPONENT_LAYOUT_DESC"
				useglobal="true"
				extension="com_easytablepro" view="records" />
			
		</fieldset>
	</fields>
</metadata>
