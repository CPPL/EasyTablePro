<root>
	<params group="EASYTABLE_PREFS">
		<param name="access" type="list" size="20" default="0" label="Access Level" description="ACCESS_LEVEL_DESC">
			<option value="0">Public</option>
			<option value="1">Registered</option>
			<option value="2">Special</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="title_links_to_table" type="list" default="" label="TITLE_LINKS_TO_TABLE" description="TITLE_LINKS_TO_TABLE_DESC" >
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_description" type="list" default="" label="SHOW_DESCRIPTION" description="THIS_WILL_SHOW_DESCRIPTION_WHEN_THIS_OPTION_IS_SET_TO__YES__">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_search" type="list" default="" label="SHOW_TABLE_SEARCH" description="THIS_WILL_SHOW_THE_SEARCH_FUNCTION_FOR_THIS_TABLE_WHEN_THE_OPTION_IS_SET_TO__YES__">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_pagination" type="list" default="" label="SHOW_TABLE_PAGINATION" description="ENABLE_TABLE_PAGINATION">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_pagination_header" type="list" default="" label="SHOW_PAGES_DESC" description="PAGINATION_CONTROLS_DESC">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_pagination_footer" type="list" default="" label="SHOW_TABLE_PAGINATION_FOOTER" description="THIS_WILL_SHOW_THE_PAGINATION_CONTROLS_IN_THE_FOOTER">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_next_prev_record_links" type="list" default="" label="NEXT_PREV_LINKS" description="IN_A_RECORD_VIEW_THIS_WILL_SHOW_LINKS_TO_THE_NEXT_AND_PREVIOUS_RECORD_IF_THEY_EXIST_">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_created_date" label="SHOW_CREATION_DATE" type="list" default="" description="CREATION_DATE_WILL_BE_DISPLAYED_WHEN_THIS_OPTION_IS_SET_TO__YES__">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="show_modified_date" label="SHOW_MODIFIED_DATE" type="list" default="" description="MODIFICATION_DATE_WILL_BE_DISPLAYED_WHEN_THIS_OPTION_IS_SET_TO__YES__">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="modification_date_label" label="MODIFCATION_DATE_LABEL" type="text" default="" description="MODIFICATION_DATE_LABEL_DESC">
		</param>
		<param name="make_tables_sortable" label="MAKE_TABLES_SORTABLE" type="list" default="" description="WHEN_SET_TO_YES__WILL_MAKE_THE_TABLE_SORTABLE_BY_CLICK_COLUMN_HEADINGS_">
			<option selected="selected" value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="searchable_by_joomla" type="list" default="" label="SEARCH_IN_JOOMLA_" description="SEARCH_IN_JOOMLA_DESC">
			<option value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
	</params>
	<params group="LINKED_TABLE" addpath="/administrator/components/com_easytablepro/elements">
		<param name="show_linked_table" type="list" default="" label="SHOW_LINKED_TABLE" description="SHOW_LINKED_TABLE_DESC" >
			<option value="">Use Global</option>
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="id" type="easytable" default="" label="SELECT_TABLE" description="THE_TABLE_TO_LINK_TO_" />
		<param name="key_field" type="easytablefields" default="" label="SELECT_FIELD" description="THE_FIELD_IN_THIS_TABLE_YOU_WANT_TO_USE_FOR_SELECTING_RECORDS_IN_THE_LINKED_TABLE_" />
		<param name="linked_key_field" label="LINKED_KEY_FIELD" type="text" default="" description="THE_ID_OF_THE_FIELD_FROM_THE_LINKED_TABLE_TO_MATCH_TO_THE_KEY_FIELD_IN_THIS_TABLE_" />
	</params>
	<params group="USER_FILTER" addpath="/administrator/components/com_easytablepro/elements">
		<param name="enable_user_filter" type="list" default="" label="ENABLE_USER_LABEL" description="ENABLE_USER_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="filter_records_by" type="list" default="" label="FILTER_BY_USER_LABEL" description="FILTER_BY_USER_DESC">
			<option value="name">Name</option>
			<option value="id">ID</option>
		</param>
		<param name="user_filter_field" type="easytablefields" default="" label="SELECT_FIELD" description="FILTER_FIELD_DESC" />
	</params>
</root>
